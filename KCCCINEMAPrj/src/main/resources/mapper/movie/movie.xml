	<insert id="insertMovie" parameterType="com.example.kcccinema.model.MovieVO">
	<![CDATA[
			INSERT INTO MOVIE (
			movie_id, 
			MOVIE_CATEGORY, 
			MOVIE_POSTER, 
			movie_title, 
			opening_date, 
			closing_date, 
			running_time, 
			movie_director, 
			movie_synopsis, 
			performer, 
			IS_AULT_MOVIE
		)
		VALUES (
			#{movieId}, 
			#{movieCategory}, 
			#{moviePoster}, 
			#{movieTitle}, 
			#{openingDate}, 
			#{closingDate}, 
			#{runningTime}, 
			#{movieDirector}, 
			#{movieSynopsis}, 
			#{performer}, 
			#{isAdultMovie} 
		)
	]]>
	</insert>
	
